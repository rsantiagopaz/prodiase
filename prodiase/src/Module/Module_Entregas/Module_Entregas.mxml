		</mx:columns>
	</mx:DataGrid>
	<mx:Button x="606" y="0" enabled="{dtgIngresos.selectedItem != null &amp;&amp; dtgIngresos.selectedItem.@estado == 'A'}" label="Anular entrega..." id="btnAnularEntrega"/>
